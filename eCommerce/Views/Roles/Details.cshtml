﻿@using Business.Models
@model RoleModel

@{
    ViewData["Title"] = "Rol Detayı";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null)
{
    <partial name="_Sonuc" />
}
else
{
    <div>
        <h4>Rol</h4>
        <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.UsersDisplay)
            </dt>
            <dd class="col-10">
                <ol style="padding: 0;">
                    @foreach (string kullanici in Model.UsersDisplay)
                    {
                        <li>@kullanici</li>
                    }
                </ol>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a>&nbsp;|&nbsp;
        <a asp-action="Index">Rol Listesi</a>
    </div>
}